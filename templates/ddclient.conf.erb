daemon=<%= @interval %>  # check interval in seconds
syslog=<%= @syslog ? "yes" : "no" %>
mail-failure=root
pid=/var/run/ddclient/ddclient.pid
ssl=<%= @ssl ? "yes" : "no" %>
use=<%= @use %>
<% if @server -%>
server=<%= @server %>
<% end -%>
protocol=<%= @protocol %>,
login=<%= @identity %>,
password=<%= @password %>
<%= @domains.join(', ') %>
